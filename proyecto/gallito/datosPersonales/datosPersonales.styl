/************Layout****************/
@import('../layout/layout.styl')
/************Layout****************/
colorError=#ad3a3a
.color-error
    color colorError
.contenedor-img-upload
    background #e6e7e8
    border 1px solid #696969
    height 10em
    width 15em
    overflow hidden
    display inline-block
    margin-top 0em
    text-align center
    position relative
.text-gallito-img-upload
    font-family: calisto;
    font-size: 2em;
    padding-top: 1.6em;
    display: inline-block;
.text-img-warning
    color #6d6e70
    font-size 0.9em
.span-text-warning
    margin-left 0.5em
#image_upload_preview
    width 100%
    position absolute
    right 0
    top 0
input[type="file"]
    width 100%
.text-1-line
    margin-top 0.5em
    display inline-block
.text-2-line
    width 8em
.input-documento
    margin-top 0.5em
.subtitle-form-gallito-registro
    color #4d8ac8
    font-weight bold
    margin-bottom 0.3em
    font-size 1.2em
    margin-top 1em
.contenedor-filtro-gallito
    height 76em
@media screen and (max-width: 956px)
    .contenedor-filtro-gallito
        height inherit
    .content-img-upload
        text-align center