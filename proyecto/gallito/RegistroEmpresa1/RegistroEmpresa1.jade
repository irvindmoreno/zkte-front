extends ../layout/layout.jade
block head
    link(href='./RegistroEmpresa1.css' rel='stylesheet')
block banner
    div(class="contenido-banner-registro_aviso")
        div(class="contenido-banner-registro_aviso-text") Registro de Empresa 
block contenido
    div(class="contenedor-vista-paso-1")
        //************** tabs gallito **************//
        - pestaniaUno="Primer paso"
        - contenidoUno="DATOS DE LA EMPRESA"
        - pestaniaDos="Segudno paso"
        - contenidoDos="ADMINISTRADOR"
        - pestaniaTres="Tercer paso"
        - contenidoTres="PUBLICAR"
        - pestanias={1:pestaniaUno,2:pestaniaDos}
        - pestaniasContenido=[contenidoUno,contenidoDos]
        div(class="contenedor-tab-gallito")
            div(class="TabsAsep row smb")
                each pestania,index in pestanias
                    div(class="col-xs-6 col-sm-4 col-md-4 spb")
                        div(class="TabsAsep-Pestania TabsAsep-Pestania-"+index data=index)
                            div(class="TabsAsep-Pestania-Ttulo")
                                div(class="TabsAsep-Pestania-Ttulo-Numero")=index
                                div(class="TabsAsep-Pestania-Bloque2")
                                    div(class="TabsAsep-Pestania-Ttulo-Texto")=pestania
                                    div(class="TabsAsep-Pestania-Contenido")=pestaniasContenido[index-1]
        //************** tabs gallito **************// 
        //************** formulario gallitoRegistro **************//
        - rutaImagenes ='../../../imagenes'
        form(id="formulario-registro-1" method="post" action="#")
            div(class="contenedor-formulario-gallito")
                div(class="contenedor-icon-gallito-perfil block-desplegable-rectangle")
                    div(class="contenedor-title-borde")
                        span(class="title-text-borde") Datos
                        i(class="fa fa-angle-up icon-up-filter" aria-hidden="true")
                        i(class="hideDiv fa fa-angle-down icon-down-filter" aria-hidden="true")
                div(class="contenedor-desplegado")
                    div(class="contenedor-datos-cargo")
                        div(class="row smb cont-file")
                            div(class="col-md-12 spb")
                                span(class="color-error") (*) Campos Obligatorios
                        div(class="row smb cont-file")
                            div(class="col-sm-3 col-md-2 spb")
                                span(class="text-1-line") Nombre comercial (*)
                            div(class="col-sm-6 col-md-7 spb align-middle")
                                input(type="text" class="input_form_perfil" maxlength="100" name="name_nombre_comercial" placeholder="Ingrese nombre comercial")
                            div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
                        div(class="row smb cont-file")
                            div(class="col-sm-3 col-md-2 spb")
                                span(class="text-1-line") Razón Social (*)
                            div(class="col-sm-6 col-md-7 spb align-middle")
                                input(type="text" class="input_form_perfil" maxlength="100" name="name_razon_social" placeholder="Ingrese razón social")
                            div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
                        div(class="row smb cont-file")
                            div(class="col-sm-3 col-md-2 spb align-middle-text")
                                span(class="text-2-line ") Rubro (*)
                            div(class="col-sm-6 col-md-7 spb align-middle")
                                select(class="input_form_perfil select_color" name="name_rubro")
                                    option(value="") Seleccione
                                    option(value="1") Informática
                                    option(value="2") Sistemas
                                    option(value="3") Idiomas
                            div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
                        div(class="row smb cont-file")
                            div(class="col-sm-3 col-md-2 spb")
                                span(class="text-1-line") Dirección
                            div(class="col-sm-6 col-md-7 spb align-middle")
                                input(type="text" class="input_form_perfil" maxlength="100" name="name_direccion" placeholder="Ingrese dirección")
                            div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
                        div(class="row smb cont-file")
                            div(class="col-sm-3 col-md-2 spb align-middle-text")
                                span(class="text-2-line ") Documento de identidad (*)
                            div(class="col-sm-6 col-md-7 spb align-middle")
                                select(class="input_form_perfil select_color" name="name_documento" id="select_documento")
                                    option(value="") Seleccione
                                    option(value="1") RUT
                                    option(value="2") CI
                                    option(value="3") Doc. Extranjero
                                input(type="text" class="input_form_perfil input-documento" maxlength="100" name="name_nro_documento" id="id_nro_documento" placeholder="Seleccione un tipo de documento" disabled)
                            div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
                        div(class="row smb cont-file")
                            div(class="col-sm-3 col-md-2 spb")
                                span(class="text-1-line") Página Web
                            div(class="col-sm-6 col-md-7 spb align-middle")
                                input(type="text" class="input_form_perfil" maxlength="100" name="name_web" placeholder="http://")
                            div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
                        div(class="row smb cont-file")
                            div(class="col-sm-3 col-md-2 spb")
                                span(class="text-1-line") Correo Electrónico (*)
                            div(class="col-sm-6 col-md-7 spb align-middle")
                                input(type="text" class="input_form_perfil" maxlength="100" name="name_correo" placeholder="Ingrese correo")
                            div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
                        div(class="row smb cont-file")
                            div(class="col-sm-3 col-md-2 spb")
                                span(class="text-1-line") Contraseña (*)
                            div(class="col-sm-6 col-md-7 spb align-middle")
                                input(type="text" class="input_form_perfil" id="id_repeat_psw" maxlength="100" name="name_pasword" placeholder="Ingrese contraseña")
                            div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
                        div(class="row smb cont-file")
                            div(class="col-sm-3 col-md-2 spb")
                                span(class="text-1-line") Repetir contraseña (*)
                            div(class="col-sm-6 col-md-7 spb align-middle")
                                input(type="text" class="input_form_perfil" maxlength="100" name="name_pasword_repeat" placeholder="Repetir contraseña")
                            div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
                        div(class="row smb cont-file")
                            div(class="col-sm-3 col-md-2 spb")
                                span(class="text-1-line") Teléfono
                            div(class="col-sm-6 col-md-7 spb align-middle")
                                input(type="text" class="input_form_perfil" maxlength="100" name="name_telefono" placeholder="Ingrese teléfono")
                            div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
                        div(class="row smb cont-file")
                            div(class="col-sm-3 col-md-2 spb")
                                span(class="text-1-line") Celular
                            div(class="col-sm-6 col-md-7 spb align-middle")
                                input(type="text" class="input_form_perfil" maxlength="100" name="name_celular" placeholder="Ingrese celular")
                            div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
                        div(class="row smb cont-file")
                        div(class="row smb subtitle-form-gallito-registro") Ubicación del puesto
                        div(class="row smb cont-file")
                            div(class="col-sm-3 col-md-2 spb align-middle-text")
                                span(class="text-2-line ") País (*)
                            div(class="col-sm-6 col-md-7 spb align-middle")
                                select(class="input_form_perfil select_color" name="name_pais")
                                    option(value="") Seleccione
                                    option(value="1") Informática
                                    option(value="2") Sistemas
                                    option(value="3") Idiomas
                            div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
                        div(class="row smb cont-file")
                            div(class="col-sm-3 col-md-2 spb align-middle-text")
                                span(class="text-2-line ") Departamento (*)
                            div(class="col-sm-6 col-md-7 spb align-middle")
                                select(class="input_form_perfil select_color" name="name_departamento")
                                    option(value="") Seleccione
                                    option(value="1") Informática
                                    option(value="2") Sistemas
                                    option(value="3") Idiomas
                            div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
                        div(class="row smb cont-file")
                            div(class="col-sm-3 col-md-2 spb align-middle-text")
                                span(class="text-2-line ") Localidad / Barrio(*)
                            div(class="col-sm-6 col-md-7 spb align-middle")
                                select(class="input_form_perfil select_color" name="name_localidad")
                                    option(value="") Seleccione
                                    option(value="1") Informática
                                    option(value="2") Sistemas
                                    option(value="3") Idiomas
                            div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
                        div(class="row smb subtitle-form-gallito-registro") Logo de la empresa
                        div(class="row smb cont-file")
                            div(class="col-sm-3 col-md-2 spb align-middle-text")
                            div(class="row smB col-sm-6 col-md-7 spb align-middle")
                                div(class="content-img-upload spb col-xs-6 col-sm-6 col-md-6")
                                    label(class="cargar" for="archivo")
                                        span Seleccionar archivo
                                            input(type="file" id="archivo" name="archivo")
                                    div(class="text-img-warning")
                                        i(class="fa fa-exclamation-triangle" aria-hidden="true")
                                        span(class="span-text-warning") Formatos permitidos: JPG, PNG.
                                    div(class="text-img-warning")
                                        i(class="fa fa-exclamation-triangle" aria-hidden="true")
                                        span(class="span-text-warning") Tamaño máximo: 500kb.
                                div(class="content-img-upload spb col-xs-6 col-sm-6 col-md-6 align-right")
                                    div(class="contenedor-img-upload")
                                        span(class="text-gallito-img-upload") gallito.com
                                        img(id="image_upload_preview")
                            div(class="col-sm-3 col-md-2 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
            div(class="contenedor-datos-cargo")
                div(class="row smb cont-file")
                    div(class="col-sm-3 col-md-2 spb")
                        span(class="text-1-line")
                    div(class="col-sm-6 col-md-7 spb align-middle align-right")
                        button(id="addEstudio" class="btn-form-gallito btn-atras-gallito" ) Chat
                        button(class="btn-form-gallito btn-gallit-green" type="submit " id="btn-continuaraPaso-2") Continuar
                    div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                        div(class="icon-alert icon-inline icon-alert-left hideDiv")
                        div(class="error-format text-2-line-error")
        //************** formulario gallitoRegistro **************//
block script
    script(src='./clases.js')
    script(src='./RegistroEmpresa1.js')
