                                div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                    div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                    div(class="error-format text-2-line-error")
                        div(class="row smb contenedor-paginacion align-right")
                            div(class="col-sm-3 col-md-2 spb")
                            div(class="col-sm-6 col-md-7 spb align-middle")
                                span(id="addPregunta" class="btn-form-gallito btn-gallit-ligth" ) Añadir Pregunta
                            div(class="col-sm-3 col-md-3 spb align-middle-text cont-module-error")
                                div(class="icon-alert icon-inline icon-alert-left hideDiv")
                                div(class="error-format text-2-line-error")
                        div(class="row smb contenedor-paginacion align-left " id="contenedor-preguntas-add")
            div(class="content-btn-form")
                button(id="addEstudio" class="btn-form-gallito btn-atras-gallito" ) Atrás
                button(class="btn-form-gallito btn-gallit-green" type="submit " id="btn-continuaraPaso-2") Continuar
