                        div.col-xs-2.col-sm-2.col-md-4.vs vs
                        div.col-xs-5.col-sm-5.col-md-4.region Región / País
                            select.select
                                option(value="") Seleccione
                                option(value="grupo1") Centro América
                                option(value="pais1") &nbsp;&nbsp;&nbsp;Honduras
                                option(value="pais1") &nbsp;&nbsp;&nbsp;México
                                option(value="grupo1") América del Sur
                                option(value="pais1") &nbsp;&nbsp;&nbsp;Perú
                                option(value="pais1") &nbsp;&nbsp;&nbsp;Chile
                                option(value="pais1") &nbsp;&nbsp;&nbsp;Bolivia
                div.row
                    div(id="grafico" class="grafico")
            div.col-md-12.col-md-5
    script.
        var grafico = new GraficoCliclogix()
