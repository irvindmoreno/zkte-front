    script(src="https://code.highcharts.com/highcharts.js")
    script(src="https://code.highcharts.com/modules/exporting.js")
    div(class="contenedor-posicionamiento")
        div.row.header-posicionamiento
            span.titulo-grafico Analisis de Posicionamiento
            br
            span.subtitulo-grafico (Resultados a la Fecha de Hoy)
        div.row
            div.col-md-12.col-md-7
                div.row.cabezera-grafico
                    div.col-md-offset-3.col-xs-12.col-md-8
