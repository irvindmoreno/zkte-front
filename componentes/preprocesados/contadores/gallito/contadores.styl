//************** contadores gallito **************//
.contenedor-cont
    text-align: center;
    padding: 2em 3em;
    background: #f2f2f3;
    border-right: 1px #808080 dashed;
.contenedor-cont:last-child
    border-right: 1px #808080 none;
.sinMb
    margin-right 0px
    margin-left 0px
.contendeor-contador-gallito
    padding: 1em 0em;
    background: #1e2b3c;
.contador-gallito-number
    font-size: 2.5em;
    color: #3a404b;
    font-weight: bold;
.contador-gallito-text
    font-size: 1.5em;
    line-height: 0.5;
    font-weight: bold;
    color: #3a404b;
.img-icon
    height 3em
@media screen and (max-width: 823px)
    .contenedor-cont
        padding 2em 1em
@media screen and (max-width: 720px)
    .contenedor-cont
        padding 2em 1em
    .contador-gallito-number
        font-size 1.5em
    .contador-gallito-text
        font-size 1em
    .img-icon
        height 2em
@media screen and (max-width: 435px)
    .contenedor-cont
        padding 2em 0em
@media screen and (max-width: 360px)
    .contador-gallito-text
        font-size 0.8em
//************** contadores gallito **************//
