//************** post gallito **************//
.smB
    margin-left 0px
    margin-right 0px
.spB
    padding-left 0px
    padding-right 0px
.post-gallito-title
    position relative
    margin-bottom 1em
.contenedor-post-gallito
    border-top: 1px solid gray;
    padding: 1em 0em;
.post-gallito-title-txt
    color: #3b404b;
    font-size: 1.8em;
    font-weight: bold
    display: inline-block;
    background: white;
    padding-right 0.5em
.post-gallito-title-borde
    border-bottom: 1px solid #404040;
    position: absolute;
    top: 28px;
    width: 100%;
    z-index: -1;
.post-cuadro
    background: #e5eef9;
    padding-top: 1em;
    border-bottom: 1px solid gray;
.post-cuadro-izquierda,.post-cuadro-derecha
    display inline-block
    vertical-align top
.bloque-start
    background: #5e7397;
    color: white;
    display: inline-block;
    padding: 0.2em 3em 0.2em 1em;
    font-weight: bold;
.bloque-start-text-origin
    display inline-block
    margin-left 1em
.post-cuadro-izquierda-container
    padding 0.5em 3em
.bloque-start-nombre
    font-weight: bold;
    color: #585858;
.bloque-start-texto
    color: #585858;
    font-size: 14px;
.bloque-start-time
    padding 0.5em
.bloque-start i,.bloque-start-text-origin
    font-size 1.2em
.bloque-start-time
    color #585858
.i-reloj
    margin-right: 1em;
    vertical-align: middle;
    color #7f7f7f
.time-text
    color: #7f7f7f;
    font-size: 13px;
    vertical-align: middle;
.i-check,.link-post,.i-flecha-derecha
    color #365288
.link-post:hover
    text-decoration none
.i-check
    vertical-align: middle;
    margin: 0em 1em;
.i-flecha-derecha
    margin: 0em 0.2em;
    font-weight: bold;
.link-post
    margin: 0em 0.3em 0em 0em;
    font-size: 14px;
.link-post:first-child
    margin: 0em 0.3em 0em 0em;
    font-size: 14px;
.contendor-img-post
    padding: 1em;
    background: #fff;
    border: 1px solid #808080;
    display: inline-block;
    width: 12em
    height 8em    
.img-post
    width 100%
.post-cuadro-izquierda
    width 80%
.post-cuadro-derecha
    width 19%
    text-align center
.imagen-post-movil
    display none
.bg-white
    background white
@media screen and (max-width: 1036px)
    .post-cuadro-izquierda
        width 75%
    .post-cuadro-derecha
        width 24
@media screen and (max-width: 820px)
    .imagen-post-movil
        display: inline-block;
        width: 11em;
        height: 6em;
        padding: 1em;
        background: white;
        border: 1px solid gray;
    .contendor-img-post
        display none
    .post-cuadro-izquierda
        width 100%
    .post-cuadro-izquierda-container
        padding 1em
    .contenedor-post-movile
        display: inline-block;
        width: 70%;
        vertical-align: middle;
        margin-left: 1em;
@media screen and (max-width: 702px)
    .contenedor-post-movile
        width 60%
@media screen and (max-width: 542px)
    .bloque-start
        width: 100%;
        text-align: center;
    .post-cuadro-izquierda-container
        text-align center
    .contenedor-post-movile
        width 100%
    .bloque-start-nombre
        padding-bottom: 0.2em;
        padding-top: 1em;
    .contenedor-post-movile
        margin-left 0em
    .bloque-start-time
        padding: 0.5em 0em;
    .post-gallito-title-txt
        font-size 1.1em
        text-align center
//************** post gallito **************//
